@model Teledocer.Models.Types

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменить</h2>

<h4>Типы:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_type" />
            <div class="form-group">
                <label asp-for="Name_of_type" class="control-label">Наименование типа</label>
                <input asp-for="Name_of_type" class="form-control" />
                <span asp-validation-for="Name_of_type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
