@model IEnumerable<Teledocer.Models.Types>

@{
    ViewData["Title"] = "Index";
}

<h2>Типы</h2>

<p>
    <a asp-action="Create">Добавить новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name_of_type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_of_type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_type">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id_type">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_type">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
